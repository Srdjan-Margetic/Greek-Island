<div class="container">  
  <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
    <%= render 'shared/errors', obj: @user %>   
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="form-group row mb-4">
          <%= form.label :username, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :description, class: "col-2 form-label text-light" %>
          <div class="col-10 mb-4">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>
        <div class="form-group row mb-4">
          <%= form.label :password, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "submit-button btn btn-outline-light btn-lg" %>
        </div>
  <% end %>
      </div>
      <%= link_to "[ Cancel and return to comments listing ]", blogs_path, class: "text-white text-center mt-4" %>
    </div>
</div>
