<div class="container">  
  <%= form_with(model: blog, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
    <%= render 'shared/errors' %>   
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="form-group row mb-4">
          <%= form.label :title, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of comment" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :description, class: "col-2 form-label text-light" %>
          <div class="col-10 mb-4">
            <%= form.text_area :description, rows:10,  class: "form-control shadow rounded", placeholder: "Description of comment" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "submit-button btn btn-outline-light btn-lg" %>
        </div>
  <% end %>
      </div>
      <%= link_to "[ Cancel and return to comments listing ]", blogs_path, class: "text-white text-center mt-4" %>
    </div>
</div>