<div class="index-wrapper">
 <%= render 'shared/message' %>
  <h1 class="text-center mt-4"><%=  @blog.title %></h1>
  <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow bg-white rounded">
            <div class="card-header fst-italic">
              <%= blog.user.username %>
            </div>
            <div class="card-body">
              <div class="card-text text-start"><%= simple_format(@blog.description) %></div>
              <%= link_to "Edit", edit_blog_path(@blog), class: "btn btn-outline-success" %> 
              <%= link_to "Delete", blog_path(@blog), data: {turbo_confirm: "Are you sure?", method: :destroy}, class: "btn btn-outline-danger" %> 
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(@blog.created_at) %> ago,
              edited <%= time_ago_in_words(@blog.updated_at) %> ago
              </small> 
            </div>
          </div>
        </div>
      </div>
  </div>
  <%= link_to "Back to blogs", blogs_path %>
  <%= link_to "New blog", new_blog_path %>
  <%= link_to "Destroy this blog", @blog,  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

</div>





