<div class="index-wrapper pb-3">
  <h1 class="text-center mt-4">All comments</h1>
  <div class="container">
    <% @blogs.each do |blog| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow bg-white rounded">
            <div class="card-header fst-italic">
              by Srdjan
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to blog.title, blog_path(blog), class: "text-primary text-decoration-none" %></h5>
              <p class="card-text"><%= truncate(blog.description, length: 100) %></p>
              <%= link_to "View", blog_path(blog), class: "btn btn-outline-primary" %> 
              <%= link_to "Edit", edit_blog_path(blog), class: "btn btn-outline-success" %> 
              <%= link_to "Delete", blog_path(blog), data: {turbo_confirm: "Are you sure?", method: :destroy}, class: "btn btn-outline-danger" %> 
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(blog.created_at) %> ago,
              edited <%= time_ago_in_words(blog.updated_at) %> ago
              </small> 
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


